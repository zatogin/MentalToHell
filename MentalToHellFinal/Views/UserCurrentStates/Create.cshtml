@model MentalToHellFinal.Models.CustomUser.UserCurrentState

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Model/_LayoutUser.cshtml";
}

<h2>Добавить</h2>

<h4>Личный профиль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class ="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="SexId" class="control-label"></label>
                <select asp-for="SexId" class="form-control" asp-items="ViewBag.SexId"></select>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="TemperamentId" class="control-label"></label>
                <select asp-for="TemperamentId" class="form-control" asp-items="ViewBag.TemperamentId"></select>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="Credo" class="control-label"></label>
                <input asp-for="Credo" class="form-control" />
                <span asp-validation-for="Credo" class="text-danger"></span>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="Character" class="control-label"></label>
                <input asp-for="Character" class="form-control" />
                <span asp-validation-for="Character" class="text-danger"></span>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="ReligionId" class="control-label"></label>
                <select asp-for="ReligionId" class="form-control" asp-items="ViewBag.ReligionId"></select>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" type="date" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
                <span class="help-towrite">help</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
