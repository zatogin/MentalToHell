@model MentalToHell_3.Models.Users.LifeJoy
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Model/_Users.cshtml";
}

<h2>Создать</h2>

<h4>Удовлетворонность жизнью</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <input asp-for="ApplicationUserId" class="form-control" value="@UserManager.GetUserId(User)" />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeJoyExpl" class="control-label"></label>
                <textarea asp-for="LifeJoyExpl" class="form-control" ></textarea>
                <span asp-validation-for="LifeJoyExpl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobDate" class="control-label"></label>
                <input asp-for="JobDate" class="form-control" type="text" value="@DateTime.Now" />
                <span asp-validation-for="JobDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
