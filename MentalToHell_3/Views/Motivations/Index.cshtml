@model IEnumerable<MentalToHell_3.Models.Reports.Motivation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Model/_Report.cshtml";
}

<h2>Мотивация</h2>

<div>
    <a asp-action="Create">Сделать запись</a>
    <form asp-controller="Motivations" asp-action="Index" method="get">
        <div class="form-group">
            <label for="SearchString" class="control-label"></label>
            <input type="text" name="SearchString" class="form-control" />
            <input type="submit" value="Поиск" class="form-control" />
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUsers)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                    Текст
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSort">
                    Дата
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUsers.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotivationText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>  <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
