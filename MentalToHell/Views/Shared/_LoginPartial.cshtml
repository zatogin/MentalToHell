@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="">
        <ul>
            <li>
                <a asp-area="" asp-controller="UserPersonalStates" asp-action="Index"> @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link">Logout</button>
            </li>
        </ul>
    </form>
    <!--<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="navbar-link">Hello UserManager.GetUserName(User)!</a>-->
}
else
{
    <ul>
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}