@model IEnumerable<MentalToHell.Models.Reports.Report>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}

<div class="header-choose">
    <h1>Добро пожаловать!</h1>
    <h3>Выберите тему для заполнения:</h3>
</div>
<div class="header-chosen">
    <h3>Добро пожаловать в Дневник!</h3>
</div>

<div id="state-main" class="container">
    <div class="row">
        <div class="col-sm-4 state-main-item">
            <a asp-area="" asp-controller="Hobbies" asp-action="Index">Хобби</a>
        </div>
        <div class="col-sm-4 state-main-item">
            <a asp-area="" asp-controller="Motivations" asp-action="Index">Мотивация</a>
        </div>
        <div class="col-sm-4 state-main-item">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Профиль</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 state-main-item">
            <a asp-area="" asp-controller="Partytimes" asp-action="Index">Специальные события</a>
        </div>
        <div class="col-sm-6 state-main-item">
            <a href="#" class="show-state-main">Дневник</a>
        </div>
    </div>
</div>

<div class="statemain-hidden hidden">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReportMood)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportMood.MoodName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>